<h1 style="color: green; font-family: Arial, sans-serif">All Users</h1>


<table style="color: black; font-family: Arial, sans-serif; border-collapse: separate; border-spacing: 30px; ">
    <tr>
        <th>Username</th>
        <th>Email</th>
        <th>No. of Articles</th>
        <th>More</th>
    </tr>
            <%@users.each do |user|%>
        <tr>
            <td><%= user.username%></td>
            <td><%= user.email%></td>
            <td><%= user.articles.count%></td>
            <td><%= link_to 'View', user_path(user)%></td>
        </tr>
            <% end %>
         
    
</table>
